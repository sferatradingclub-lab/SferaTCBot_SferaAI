# Sfera AI - Environment Variables Template
# Copy this file to .env and fill in your values

# ================================
# LiveKit Configuration
# ================================
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ================================
# Google AI Configuration
# ================================
GOOGLE_API_KEY=your_google_api_key

# Google Custom Search Engine
GOOGLE_CSE_ID=your_custom_search_engine_id

# ================================
# Qdrant Vector Database
# ================================
QDRANT_HOST=https://your-qdrant-instance.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key

# ================================
# Telegram Bot (Optional)
# ================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ================================
# Agent Configuration
# ================================
# Agent Model
AGENT_MODEL=gemini-2.0-flash-exp

# Agent Voice
AGENT_VOICE=Puck

# Agent Temperature (0.0 - 1.0)
AGENT_TEMPERATURE=0.9

# ================================
# Memory Configuration
# ================================
# Default user name
MEMORY_USER_NAME=default_user

# Memory collection name
MEMORY_COLLECTION_NAME=sfera_memory

# User state collection
USER_STATE_COLLECTION=sfera_user_state

# ================================
# Cache Settings (from config.py)
# ================================
# Web search cache TTL (seconds)
CACHE_WEB_SEARCH_TTL=600

# Knowledge base search cache TTL (seconds)
CACHE_KB_SEARCH_TTL=1800

# Crypto price cache TTL (seconds)
CACHE_CRYPTO_PRICE_TTL=30

# Video search cache TTL (seconds)
CACHE_VIDEO_SEARCH_TTL=3600

# Max cache size
CACHE_MAX_SIZE=1000

# ================================
# API Endpoints (from config.py)
# ================================
# Binance API
API_BINANCE_BASE=https://api.binance.com/api/v3
API_BINANCE_PRICE=https://api.binance.com/api/v3/ticker/price

# Weather API
API_WEATHER=https://wttr.in

# Google Custom Search API
API_GOOGLE_CSE=https://www.googleapis.com/customsearch/v1

# ================================
# Search Settings (from config.py)
# ================================
# Google search timeout (seconds)
SEARCH_GOOGLE_TIMEOUT=8

# Max search results
SEARCH_MAX_RESULTS=5

# Video search results
SEARCH_VIDEO_RESULTS=3

# Safe search mode (on/off)
SEARCH_SAFESEARCH=off

# ================================
# Knowledge Base Settings (from config.py)
# ================================
# Dense/Sparse weights for hybrid search
KB_DENSE_WEIGHT=0.6
KB_SPARSE_WEIGHT=0.4

# Text chunking
KB_CHUNK_SIZE=1500
KB_CHUNK_OVERLAP=200

# Search parameters
KB_MAX_RESULTS=5
KB_SIMILARITY_THRESHOLD=0.7

# Qdrant timeout (seconds)
KB_QDRANT_TIMEOUT=30

# ================================
# Redis Configuration (Phase 1B)
# ================================
# Redis URL for session registry
REDIS_URL=redis://localhost:6379
# For production, use managed Redis:
# REDIS_URL=redis://username:password@your-redis-host:6379

# ================================
# Monitoring (Phase 1D)
# ================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=
# Environment name for Sentry
ENVIRONMENT=development

# ================================
# Performance Tuning (Phase 1C)
# ================================
# Maximum concurrent sessions (default: 1000)
MAX_CONCURRENT_SESSIONS=1000

# ================================
# Logging
# ================================
LOG_LEVEL=INFO

# ================================
# Development
# ================================
# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false
